# Docker Monitoring Stack Environment Variables
# Copy this to .env and fill in your values

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
GRAFANA_PORT=3000

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Node Exporter Configuration
NODE_EXPORTER_PORT=9100

# cAdvisor Configuration
CADVISOR_PORT=8081

# Uptime Kuma Configuration
UPTIME_KUMA_PORT=3001

# Portainer Configuration
PORTAINER_PORT=9443

# Process Exporter Configuration
PROCESS_EXPORTER_PORT=9256

# Network Configuration
DOCKER_NETWORK_NAME=monitoring

# Timezone
TZ=UTC

# Data Directories (relative to compose file)
GRAFANA_DATA_DIR=./grafana/data
PROMETHEUS_DATA_DIR=./prometheus/data
UPTIME_KUMA_DATA_DIR=./uptime-kuma-data

# Security Settings
GRAFANA_DISABLE_GRAVATAR=false
GRAFANA_ALLOW_SIGN_UP=false

# Optional: Custom domain for reverse proxy
# DOMAIN=your-domain.com

# Optional: Cloudflare API Token for automatic HTTPS
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Domain configuration
DOMAIN=home.loominuslab.com

# Additional security (optional)
# PROMETHEUS_WEB_EXTERNAL_URL=https://home.loominuslab.com/prometheus/
# GRAFANA_ROOT_URL=https://home.loominuslab.com/grafana/
